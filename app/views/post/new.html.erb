<div class="container">
    <div class="row">
        <div class="jumbotron">
            <h1>Create New Blog</h1>
        </div>
        <form>
            <div class="row">
                <div class="form-group">
                    <input id="title" type="text" class="form-control" placeholder="Enter the Title">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <input id="body" type="text" class="form-control" placeholder="Enter the Body">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="createPost()">Submit</button>
                </div>
            </div>
            <%=link_to "Back", root_path, class:"btn btn-default"%>
        </form>
</div>
<script>
function createPost(){
    var title = $("#title").val()
    var body = $("#body").val()
    $.ajax({
        url: '/create_post',
        method: "post",
        data: {title: title, body: body},
    })
}
</script>
