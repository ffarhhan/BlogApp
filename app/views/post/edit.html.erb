<div class="container">
    <div class="row">
        <div class="jumbotron">
            <h1>Edit Blog</h1>
        </div>
        <form>
            <div class="row">
                <div class="form-group">
                    <input id="title" type="text" class="form-control" value="<%=@post.title%>">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <input id="body" type="text" class="form-control" value="<%=@post.body%>">
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button type="button" class="btn btn-primary" onclick="updatePost(<%=@post.id%>)">Update Blog</button>
                </div>
            </div>
            <%=link_to "Back", root_path, class:"btn btn-default"%>
        </form>
</div>
<script>
function updatePost(id){
    var title = $("#title").val()
    var body = $("#body").val()
    $.ajax({
        url: '/update',
        method: "post",
        data: {id: id, title: title, body: body},
    })
}
</script>
